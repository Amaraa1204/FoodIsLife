<%= stylesheet_link_tag 'ingredient', 'admin-manage', 'admin', media: 'all', 'data-turbolinks-track': 'reload' %>

<div class="header">
	<div class="inside_head">
		<%= image_tag 'house.png', :class => "iconLil" %>
		<%= link_to 'Home', admin_admin_index_path, :class => 'homeBTN' %>
	</div>
</div>

<div class="admin_sub">
  <h1 class="admin_sub_inside">Edit Ingredient Category</h1>
  <hr class="hr">
  <div class="insub">
    <%= form_with model: @ingrecategory, url: admin_ingre_category_path(@ingrecategory), local: true do |form| %>

      <% if @ingrecategory.errors.any? %>
        <div id="error_explanation">
          <h2>
            <%= pluralize(@ingrecategory.errors.count, "error") %> prohibited
            this ingre_category from being saved:
          </h2>
          <ul>
            <% @ingrecategory.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
      <p class="label_new">
        <%= form.label :name %><br>
        <%= form.text_field :name %>
      </p>
      <p class="label_new">
      <%= form.label :image %><br>
      <span class="sbtn"><%= form.file_field :image, class: "image" %></span><br>
      <%= image_tag @ingrecategory.image.full.url, :class => 'ingre_cate_show_img' %>
      </p>
      <p>
        <%= form.submit :'Update Ingredient Category' %>
      </p>

    <% end %>

    <%= link_to 'Back', admin_ingre_category_path, :class => 'btn-user' %>
  </div>
</div>
