<%= stylesheet_link_tag 'ingredient', 'admin-manage', 'admin', media: 'all', 'data-turbolinks-track': 'reload' %>

<div class="header">
	<div class="inside_head">
		<%= image_tag 'house.png', :class => "iconLil" %>
		<%= link_to 'Home', admin_admin_index_path, :class => 'homeBTN' %>
	</div>
</div>

<div class="admin_sub">
	<h1 class="admin_sub_inside">Ingredient Category</h1>
	<hr class="hr">
	<div class="insub">
		<div class="img_show_ingre">
			<%= image_tag @ingrecategory.image.full.url, :class => 'ingre_cate_show_img' %>
		</div>
		<table>
			<tr>
			  <th><strong>ID:</strong></th>
			  <td><%= @ingrecategory.id %></td>
			</tr>
			<tr>
			  <th><strong>NAME:</strong></th>
			  <td><%= @ingrecategory.name %></td>
			</tr>
		</table>
		<%= link_to 'Edit', edit_admin_ingre_category_path(@ingrecategory), :class => 'btn-user' %>
		<%= link_to 'Back', admin_ingre_category_index_path, :class => 'btn-user' %>
	</div>
</div>
