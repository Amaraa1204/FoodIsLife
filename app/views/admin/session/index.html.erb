<%= stylesheet_link_tag 'ingredient', 'admin-manage', 'admin', media: 'all', 'data-turbolinks-track': 'reload' %>
<div class="admin_sub">
  <div class="insub">
    <h1 class="welcome_admin">Welcome to RECIDENT admin sector!</h1>
    <% if admin_logged_in? %>
        <h1 class="admin_sub_inside">You are Logged In, <%= current_admin.user_name %></h1>
    <%end%>
    <%= button_to "Sign up", new_admin_admin_path, method: :get%>
    <%= button_to "Login", new_admin_session_path, method: :get%>
    <%= button_to "Logout", admin_session_index_path, method: :delete%>
  </div>
</div>
