<%= stylesheet_link_tag 'ingredient', 'admin-manage', 'admin', media: 'all', 'data-turbolinks-track': 'reload' %>

<div class="header">
	<div class="inside_head">
		<%= image_tag 'house.png', :class => "iconLil" %>
		<%= link_to 'Home', admin_admin_index_path, :class => 'homeBTN' %>
	</div>
</div>
<div class="admin_sub">
  <h1 class="admin_sub_inside">Edit Recipe Category</h1>
  <hr class="hr">
  <div class="insub">
    <%= form_with model: @reccategory, url: admin_rec_category_path(@reccategory), local: true do |form| %>

      <% if @reccategory.errors.any? %>
        <div id="error_explanation">
          <h2>
            <%= pluralize(@reccategory.errors.count, "error") %> prohibited
            this rec_category from being saved:
          </h2>
          <ul>
            <% @reccategory.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
      <p class="label_new">
        <%= form.label :name %><br>
        <%= form.text_field :name %>
      </p>
      <p>
        <%= form.submit :'Update Recipe Category' %>
      </p>
    <% end %>

    <%= link_to 'Back', admin_rec_category_path, :class => 'btn-user' %>
  </div>
</div>
