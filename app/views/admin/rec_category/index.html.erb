<%= stylesheet_link_tag 'ingredient', 'admin-manage', 'admin', media: 'all', 'data-turbolinks-track': 'reload' %>

<div class="header">
	<div class="inside_head">
		<%= image_tag 'house.png', :class => "iconLil" %>
		<%= link_to 'Home', admin_admin_index_path, :class => 'homeBTN' %>
	</div>
</div>

<div class="admin_sub">
  <h1 class="admin_sub_inside">Recipe Categories</h1>
	<hr class="hr">
  <div class="admin_cate_btn_area">
    <p>
      <%= link_to 'New Recipe Category', new_admin_rec_category_path, :class => 'btn-user' %>
      <a class="btn-user" href="http://localhost:3000/admin/ingre_category">Show Ingredient Categories</a>
    </p>

    <table>
      <tr class="admin_user_tr">
        <th>Id</th>
        <th>Name</th>
      </tr>
      <% @reccategory.each do |rec_category| %>
        <tr>
          <td><%= rec_category.id %></td>
          <td><%= rec_category.name %></td>
          <td class="newCate"><%= link_to 'Show', admin_rec_category_path(rec_category), :class => 'btn-form' %></td>
          <td class="newCate"><%= link_to 'Edit', edit_admin_rec_category_path(rec_category), :class => 'btn-form' %></td>
          <td class="newCate"><%= link_to 'Delete', admin_rec_category_path(rec_category), :class => 'btn-form' ,
                  method: :delete,
                  data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </table>
  </div>
</div>
