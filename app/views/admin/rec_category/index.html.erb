<%= image_tag 'house.png', :class => "iconLil" %>
<%= link_to 'Home', admin_admin_index_path, :class => 'homeBTN' %>
<div class="indexCate">
  <%= link_to 'New rec_Category', new_admin_rec_category_path, :class => 'newCate' %>

<table class="tableCate">
  <tr>
    <th>ID</th>
    <th>Name</th>
  </tr>

  <% @rec_category.each do |rec_category| %>
    <tr>
      <td><%= rec_category.id %></td>
      <td><%= rec_category.name %></td>
      <td class="newCate"><%= link_to 'Show', admin_rec_category_path(rec_category), :class => 'newCate' %></td>
      <td class="newCate"><%= link_to 'Edit', edit_admin_rec_category_path(rec_category), :class => 'newCate' %></td>
      <td class="newCate"><%= link_to 'Destroy', admin_rec_category_path(rec_category), :class => 'newCate' ,
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>

</div>
