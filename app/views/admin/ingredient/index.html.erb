<h1>
  <%= image_tag 'order.png', :class => "iconH1" %> Listing Ingredients
</h1>

<hr width="25%", align="left">

<h3>
  <%= image_tag 'add.png', :class => "iconAddIndex" %>
  <%= link_to 'New ingredient', new_admin_ingredient_path, :class => "action", :id => "newIngre" %>
</h3>

<table>
  <tr>
    <th>Name</th>
    <th>Category</th>
    <th>Calories</th>
    <th></th>
  </tr>

  <% @ingres.each do |ingredient| %>
    <tr class="listTable" >
      <td><%= ingredient.name %></td>
      <td><%= ingredient.categoryId %></td>
      <td><%= ingredient.calories %></td>
      <td><%= link_to ' Show ', admin_ingredient_path(ingredient), :class => "action" %> | </td>
      <td><%= link_to ' Edit ', edit_admin_ingredient_path(ingredient), :class => "action" %> | </td>
      <td><%= link_to ' Delete ', admin_ingredient_path(ingredient), :class => "action" ,
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>
