<%= stylesheet_link_tag 'ingredient', 'admin-manage', 'admin', media: 'all', 'data-turbolinks-track': 'reload' %>

<div class="header">
	<div class="inside_head">
		<%= image_tag 'house.png', :class => "iconLil" %>
		<%= link_to 'Home', admin_admin_index_path, :class => 'homeBTN' %>
	</div>
</div>

<div class="admin_sub">
  <h1 class="admin_sub_inside">Recipe</h1>
  <hr class="hr">
  <div class="insub">
    <table class="list">
      <tr>
        <th><strong>Name:</strong></th>
        <th><strong>Instruction:</strong></th>
        <th><strong>Image:</strong></th>
        <th><strong>Author:</strong></th>
      </tr>
      <tr>
        <td><%= @recipe.name %></td>
        <td><%= @recipe.instruction %></td>
        <td><%= image_tag @recipe.image.full.url %></td>
        <td><%= @recipe.author_id %></td>
      </tr>
    </table>
    <%= link_to 'Edit', edit_admin_recipe_path(@recipe), class: "btn-user"%>
    <%= link_to 'Back', admin_recipe_index_path, class: "btn-user" %>
  </div>
</div>
