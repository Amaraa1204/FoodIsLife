<%= stylesheet_link_tag 'ingredient', 'admin-manage', 'admin', media: 'all', 'data-turbolinks-track': 'reload' %>

<div class="header">
	<div class="inside_head">
		<%= image_tag 'house.png', :class => "iconLil" %>
		<%= link_to 'Home', admin_admin_index_path, :class => 'homeBTN' %>
	</div>
</div>

<div class="admin_sub">
  <h1 class="admin_sub_inside">Recipe List</h1>
  <hr class="hr">
  <div class="insub">
    <%= link_to 'New recipe', new_admin_recipe_path, class: "btn-user" %>
    <table>
      <tr class="admin_user_tr">
        <th>Name</th>
        <th>Instruction</th>
        <th>Image</th>
        <th>Author</th>
      </tr>

  <% @recipe.each do |recipe| %>
    <tr>
      <td><%= recipe.name %></td>
      <td><%= recipe.instruction %></td>
      <td>
        <% if recipe.image.thumb.url %>
          <%= image_tag recipe.image.thumb.url %>
        <% else %>
          <%= image_tag asset_path("thumb_default.jpg") %>
        <% end %>
      </td>
      <td><%= recipe.author_id %></td>
      <td class="btn_form_td"><%= link_to 'Show', admin_recipe_path(recipe), class: "btn-form" %></td>
      <td class="btn_form_td"><%= link_to 'Edit', edit_admin_recipe_path(recipe), class: "btn-form" %></td>
      <td class="btn_form_td"><%= link_to 'Delete', admin_recipe_path(recipe),
              method: :delete,
              data: { confirm: 'Are you sure?' }, class: "btn-form" %></td>
    </tr>
  <% end %>
</table>
