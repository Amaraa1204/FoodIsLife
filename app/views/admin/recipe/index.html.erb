<h1>Recipe list</h1>
<%= link_to 'New recipe', new_admin_recipe_path %>
<table>
  <tr>
    <th>Name</th>
    <th>Instruction</th>
    <th>Image</th>
    <th>Author</th>
    <th colspan="3"></th>
  </tr>
 
  <% @recipe.each do |recipe| %>
    <tr>
      <td><%= recipe.name %></td>
      <td><%= recipe.instruction %></td>
      <td><%= image_tag recipe.image.thumb.url %></td>
      <td><%= recipe.authorId %></td>
      <td><%= link_to 'Show', admin_recipe_path(recipe) %></td>
      <td><%= link_to 'Edit', edit_admin_recipe_path(recipe) %></td>
      <td><%= link_to 'Destroy', admin_recipe_path(recipe),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>