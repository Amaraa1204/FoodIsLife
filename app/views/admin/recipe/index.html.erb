
<%= image_tag 'house.png', :class => "iconLil" %>
<%= link_to 'Home', admin_admin_index_path, :class => 'homeBTN' %>
<h1>Recipe list</h1>
<%= stylesheet_link_tag 'recipe', 'ingredient', media: 'all', 'data-turbolinks-track': 'reload' %>

<%= link_to 'New recipe', new_admin_recipe_path, class: "btn" %>
<table class="list">
  <tr>
    <th>Name</th>
    <th>Instruction</th>
    <th>Image</th>
    <th>Author</th>
    <th colspan="3"></th>
  </tr>

  <% @recipe.each do |recipe| %>
    <tr>
      <td><%= recipe.name %></td>
      <td><%= recipe.instruction %></td>
      <td>
        <% if recipe.image.thumb.url %>
          <%= image_tag recipe.image.thumb.url %>
        <% else %>
          <%= image_tag asset_path("thumb_default.jpg") %>
        <% end %>
      </td>
      <td><%= recipe.author_id %></td>
      <td><%= link_to 'Show', admin_recipe_path(recipe), class: "btn" %></td>
      <td><%= link_to 'Edit', edit_admin_recipe_path(recipe), class: "btn" %></td>
      <td><%= link_to 'Delete', admin_recipe_path(recipe),
              method: :delete,
              data: { confirm: 'Are you sure?' }, class: "btn" %></td>
    </tr>
  <% end %>
</table>
