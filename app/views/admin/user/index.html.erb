<h1>User informations</h1>

<%= link_to 'New User', new_admin_user_path, class:"btn" %>
<br>
<br>
<table>
	<tr>
		<th>Username</th>
		<th>Email</th>
		<th></th>
		<th></th>
	</tr>

	<% @user.each do |user| %>
	<tr>
		<td><%= user.user_name %></td>
		<td><%= user.email %></td>
		<td><%= link_to 'Show', admin_user_path(user), class:"btn-form"  %></td>
		<td><%= link_to 'Delete', admin_user_path(user), method: :delete, data: { confirm: 'Are you sure?' }, class:"btn-form"  %></td>
	</tr>
	<% end %>
</table>