<h1>Index page</h1>

<%= link_to 'New User', new_admin_user_path %>

<br>
<table>
	<tr>
		<th>Username</th>
		<th>Email</th>
	</tr>

	<% @user.each do |user| %>
	<tr>
		<td><%= user.user_name %></td>
		<td><%= user.email %></td>
		<td><%= link_to 'Show', admin_user_path(user) %></td>
		<td><%= link_to 'Delete', admin_user_path(user), method: :delete, data: { confirm: 'Are you sure?' } %></td>

	</tr>
	<% end %>
</table>