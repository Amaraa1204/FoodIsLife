<%= stylesheet_link_tag 'recipe', 'ingredient', media: 'all', 'data-turbolinks-track': 'reload' %>

<head>
  <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Sofia">
  <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Sriracha">
</head>

<div class="recipeShow">
  <h1>Login</h1>
  <hr>
  <%= form_for :user, url: user_session_index_path do |f| %>
      <%= f.label :user_name %><br>
      <%= f.text_field :user_name, class: 'user_sign_fld' %><br>
      <%= f.label :password %><br>
      <%= f.password_field :password, class: 'user_sign_fld' %><br>
      <%= f.submit "Login", class: 'user_se_btn'%>
  <%end%>
</div>
